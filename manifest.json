{
  "manifest_version": 3,
  "name": "Rooster Financial",
  "version": "1.0.0",
  "permissions": [ "storage" ],
  "action": { "default_popup": "index.html" },
  "background": {
    "service_worker": "src/scripts/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": [
        "https://www.google.com/*", 
        "https://online.simplii.com/*"
      ]
    },
    {
      "js": ["src/simplii/content.tsx"],
      "matches": [
        "https://online.simplii.com/*"
      ]
    },
    {
      "js": ["src/questrade/content.tsx"],
      "matches": [
        "https://my.questrade.com/clients/en/my_home"
      ]
    },
    {
      "js": ["src/tangerine/content.tsx"],
      "matches": ["https://www.tangerine.ca/app/*"]
    }
  ]
}